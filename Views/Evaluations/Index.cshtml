@model IEnumerable<URMS.Models.Evaluation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URMSUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URMSUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EvaluationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EvaluationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EvaluationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
